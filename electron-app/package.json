{
  "name": "port-of-exiles",
  "version": "1.0.0",
  "description": "Path of Exile automation tool with teleport and autobuy features",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "path-of-exile",
    "trade",
    "electron",
    "chrome-extension"
  ],
  "author": "Port of Exiles",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "robotjs": "^0.6.0",
    "ws": "^8.14.2",
    "google-auth-library": "^9.0.0",
    "stripe": "^14.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "build": {
    "appId": "com.portofexiles.app",
    "productName": "Port of Exiles",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
